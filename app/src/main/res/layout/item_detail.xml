<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#89e8f1"
    android:padding="4dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#89e8f1">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imgLogo"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvId"
            android:layout_toLeftOf="@+id/imgFavorite"
            android:layout_toRightOf="@+id/imgLogo"
            android:text="@string/app_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvName"
            android:layout_below="@+id/tvName"
            android:text="@string/textView.text.rating" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tvRating"
            android:layout_below="@+id/tvName"
            android:layout_toRightOf="@id/tvRating"
            android:clickable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/colorAccent"
            android:rating="3"
            android:stepSize="0.5"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRating"
            android:layout_toRightOf="@+id/imgLogo"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tvDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvName"
            android:layout_below="@id/tvAddress"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tvBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvName"
            android:layout_below="@id/tvDistrict"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tvLatLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvName"
            android:layout_below="@id/tvBank"
            android:text="@string/app_name" />

        <ImageView
            android:id="@+id/imgFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/custom_favorite_selected" />

        <Button
            android:id="@+id/btnShowMap"
            android:layout_width="wrap_content"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_show_map"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:text="@string/show_map"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tvLatLng"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
